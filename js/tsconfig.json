{
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "examples/*"]
    },
    "declaration": true
  },
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "./src/tsconfig.src.json"
    },
    {
      "path": "./examples/tsconfig.examples.json"
    }
  ]
}
